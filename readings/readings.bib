	author = {Zhang, {D.L.} and Qiu, {S.Z.} and Su, {G.H.} and Liu, {C.L.} and Qian, {L.B.}},
	month = may,
	year = {2009},
	keywords = {Inlet temperature drop, Molten salt reactor, Neutron kinetics, Pump coastdown, Rods drop},
	pages = {624--636},
	file = {Analysis_on_the_neutron_kinetics_for_a_molten_salt_reactor.mobi:/Users/khuff/Library/Application Support/Zotero/Profiles/7gmgcfkz.default/zotero/storage/RFWN5NMN/Analysis_on_the_neutron_kinetics_for_a_molten_salt_reactor.mobi:application/octet-stream;ScienceDirect Full Text PDF:/Users/khuff/Library/Application Support/Zotero/Profiles/7gmgcfkz.default/zotero/storage/2TJACBFJ/Zhang et al. - 2009 - Analysis on the neutron kinetics for a molten salt.pdf:application/pdf;ScienceDirect Snapshot:/Users/khuff/Library/Application Support/Zotero/Profiles/7gmgcfkz.default/zotero/storage/PKTKZFIC/S0149197008001625.html:text/html;zhang_analysis_2008.pdf:/Users/khuff/Library/Application Support/Zotero/Profiles/7gmgcfkz.default/zotero/storage/SX9KJGMU/zhang_analysis_2008.pdf:application/pdf}
